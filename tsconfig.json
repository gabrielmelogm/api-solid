{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**.spec.ts"]
}
